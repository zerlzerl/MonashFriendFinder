<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cv_student"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    card_view:cardCornerRadius="4dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="2dp"
    android:transitionName="weatherCardTransition"
    >




    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_stuCard"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginBottom="@dimen/margin_normal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_fName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange_main"
                android:text="Mike"
                android:textSize="@dimen/text_size_huge"/>

            <ImageView
                android:id="@+id/iv_fGender"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginTop="9dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/male"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/iv_detail"
                android:layout_marginStart="0dp"
                android:layout_marginTop="9dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_dehaze_24px"/>

            <ImageButton
                android:id="@+id/iv_delete"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginTop="9dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_person_delete_24px"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_fSuburb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Suburb:"
            android:textSize="@dimen/text_size_most"/>

        <TextView
            android:id="@+id/tv_fMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Movie:"
            android:textSize="@dimen/text_size_most"/>


    </LinearLayout>

</android.support.v7.widget.CardView>
