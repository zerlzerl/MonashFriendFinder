<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.monashsuzhou.friendfinder">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="edu.monashsuzhou.friendfinder.activity.Login"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="edu.monashsuzhou.friendfinder.activity.Logout"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="edu.monashsuzhou.friendfinder.activity.Report"
            android:label="@string/title_activity_report"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="edu.monashsuzhou.friendfinder.activity.Map"
            android:label="@string/title_activity_map"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="edu.monashsuzhou.friendfinder.activity.Searching"
            android:label="@string/title_activity_searching"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="edu.monashsuzhou.friendfinder.activity.Subscription"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/title_activity_subscription"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="edu.monashsuzhou.friendfinder.activity.MyFriends"
            android:label="@string/title_activity_my_friends"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="edu.monashsuzhou.friendfinder.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
    </application>

</manifest>